# ==== Database ====
DATABASE_URL="postgresql://ms_user:ms_pass@localhost:5432/mindfulspace?schema=public"

# ==== Server ====
PORT=3001
#NODE_ENV=development

# ==== Groq - AI API ====
GROQ_API_KEY=YOUR_SECRET

# ==== SoundCloud API ====
SOUNDCLOUD_API_KEY=***********

# ==== Audius API ====
AUDIUS_API_KEY=YOUR_SECRET
AUDIUS_API_SECRET=YOUR_SECRET

# ==== Authentication (JWT) ====
# These are pre-generated secure secrets for development.
# IMPORTANT: For production, generate new ones with: openssl rand -base64 32
JWT_ACCESS_SECRET=YOUR_SECRET
JWT_REFRESH_SECRET=YOUR_SECRET

# ==== Email (SendGrid) ====
# OPTIONAL for development: Leave empty to log emails to console instead
# For production: Get free API key from https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=YOUR_SECRET
EMAIL_FROM=noreply.mindfulspace@gmail.com

# ==== OAuth - Google ====
# OPTIONAL: Only needed if you want "Sign in with Google"
# Get credentials from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=YOUR_SECRET
GOOGLE_CLIENT_SECRET=YOUR_SECRET
GOOGLE_CALLBACK_URL=http://localhost:3001/auth/google/callback
STAGING_GOOGLE_CALLBACK_URL=https://api.staging.mindfulspace.be/auth/google/callback
PRODUCTION_GOOGLE_CALLBACK_URL=https://api.mindfulspace.be/auth/google/callback

# ==== OAuth - GitHub ====
# OPTIONAL: Only needed if you want "Sign in with GitHub"
# Get credentials from: https://github.com/settings/developers
GITHUB_CLIENT_ID=YOUR_SECRET
GITHUB_CLIENT_SECRET=YOUR_SECRET
GITHUB_CALLBACK_URL=http://localhost:3001/auth/github/callback
STAGING_GITHUB_CALLBACK_URL=https://api.staging.mindfulspace.be/auth/google/callback
PRODUCTION_GITHUB_CALLBACK_URL=https://api.mindfulspace.be/auth/google/callback

# ==== Frontend URL ====
# Used for OAuth redirects and CORS
FRONTEND_URL=http://localhost:3000
STAGING_FRONTEND_URL=http://staging.mindfulspace.be
PRODUCTION_FRONTEND_URL=http://mindfulspace.be
